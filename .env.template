# ===== CONFIGURAÇÕES DE API =====
# Exchange Rate API (https://www.exchangerate-api.com/)
EXCHANGE_API_KEY=your_exchange_api_key_here
EXCHANGE_API_BASE_URL=https://v6.exchangerate-api.com/v6

# OpenAI API (para ChatGPT)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# ===== CONFIGURAÇÕES DE BANCO (OPCIONAL) =====
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cotacoes_cambiais
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=cotacoes_cambiais
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password

# ===== CONFIGURAÇÕES DO PIPELINE =====
# Moeda base para cotações
BASE_CURRENCY=USD

# Moedas de interesse (separadas por vírgula)
TARGET_CURRENCIES=BRL,EUR,GBP,JPY,CAD,AUD,CHF,CNY

# Configurações de logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Configurações de dados
DATA_RETENTION_DAYS=90
BATCH_SIZE=1000